<p id="notice"><%= notice %></p>

<h1>Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Contractee</th>
      <th>Name</th>
      <th>Surname</th>
      <th>Email</th>
      <th>Pass active</th>
      <th>Acc active</th>
      <th>Last in</th>
      <th>Password digest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.contractee_id %></td>
        <td><%= staff.name %></td>
        <td><%= staff.surname %></td>
        <td><%= staff.email %></td>
        <td><%= staff.pass_active %></td>
        <td><%= staff.acc_active %></td>
        <td><%= staff.last_in %></td>
        <td><%= staff.password_digest %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

